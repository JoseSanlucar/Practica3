<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:id="@+id/toolbar"
    android:elevation="4dp"
    android:padding="0dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/Theme.AppCompat.Light"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/paw"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/app_name"
            android:textSize="@dimen/NombreApp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/estrella"
            android:layout_width="@dimen/TamañoEstrella"
            android:layout_height="@dimen/TamañoEstrella"
            android:background="@mipmap/estrella"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="6dp"
            android:layout_gravity="center_vertical|end" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/vertical_points"
            android:background="@color/white"
            android:layout_gravity="left"/>
    </LinearLayout>


</androidx.appcompat.widget.Toolbar>

