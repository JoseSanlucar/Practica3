<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvAnimal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bottonmargin"
    app:cardCornerRadius="@dimen/radiusCV">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFotoCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paw_background"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/HuesoNegro"
                android:layout_width="@dimen/Tama単oHueso"
                android:layout_height="@dimen/Tama単oHueso"
                android:src="@mipmap/hueso_negro"/>
            <TextView
                android:id="@+id/tvNombreCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/Elefante"
                android:textSize="@dimen/LetraTV"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NumeroLikes"
            android:textSize="@dimen/LetraTV"
            android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/huesoAmarillo"
                android:layout_width="@dimen/Tama単oHueso"
                android:layout_height="@dimen/Tama単oHueso"
                android:src="@mipmap/hueso_amarillo"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>

